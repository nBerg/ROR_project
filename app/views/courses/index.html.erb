<h1>Course Listing</h1>

<div class="row-fluid">
	<div class="span10">
		<%= will_paginate %>
	</div>
	<div class="span2">
		<div class="pull-right">
			<div id="new-course-link" class="btn btn-link">
				<%= link_to 'New Course', new_course_path %>
			</div>
		</div>
	</div>
</div>


<table class="table table-hover">
	<thead>
		<tr>
			<th>Call Number</th>
			<th>Course Title</th>
			<th>Meets On</th>
			<th>Start Time</th>
			<th>End Time</th>
			<th>Instructor</th>
			<th>Building</th>
			<th>Room</th>
			<% if admin? %>
				<th></th>
			<% end %>
		</tr>
	</thead>

	<tbody>
		<%= render @courses %>
	</tbody>
</table>

<%= will_paginate %>