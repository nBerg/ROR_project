<p id="notice"><%= notice %></p>

<div class="row-fluid">

	<div class="span3">
		<h2>User Information:</h2>

		<dl class="dl-horizontal">
		  <dt>First Name:</dt>
	  	<dd><%= @user.first_name %></dd>
		
		  <dt>Last Name:</dt>
	  	<dd><%= @user.last_name %></dd>

		  <dt>Email:</dt>
	  	<dd><%= @user.email %></dd>
		</dl>
	</div>

	<div class="span5 courses-list">
		<h2>Courses:</h2>
		<% @user.courses.each do |course| %>
			<ul>
				<li>
					<%= link_to "#{course.CallNumber} - #{course.CourseTitle}", course, class: 'btn btn-link' %>
				</li>
			</ul>
		<% end %>
	</div>

</div>



<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
