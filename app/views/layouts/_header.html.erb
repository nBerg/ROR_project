	<div class="navbar-inner">
		<div class="container-fluid">
			<% if logged_in? %>
				<%= link_to "Course Manager", user_path(@current_user) , class: "brand"%>
			<% else %>
				<%= link_to "Course Manager", "#" , class: "brand"%>
			<% end %>

			<nav>
				<ul class="nav pull-right">
					<% if logged_in? %>
						<li><%= link_to "Edit Profile", edit_user_path(@current_user) %></li>
